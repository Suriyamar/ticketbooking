import React, { useState, useEffect } from 'react';
import { supabase } from '../lib/supabase';
import type { Database } from '../lib/database.types';
import { Plus, Calendar, Users, Clock } from 'lucide-react';

type Show = Database['public']['Tables']['shows']['Row'];

export const Admin: React.FC = () => {
  const [shows, setShows] = useState<Show[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');
  const [success, setSuccess] = useState('');

  const [formData, setFormData] = useState({
    name: '',
    type: 'show' as 'show' | 'trip' | 'appointment',
    startTime: '',
    totalSeats: '',
  });

  const [formErrors, setFormErrors] = useState({
    name: '',
    startTime: '',
    totalSeats: '',
  });

  useEffect(() => {
    fetchShows();
  }, []);

  const fetchShows = async () => {
    try {
      setLoading(true);
      const { data, error } = await supabase
        .from('shows')
        .select('*')
        .order('start_time', { ascending: true });

      if (error) throw error;
      setShows(data || []);
    } catch (err) {
      setError('Failed to fetch shows. Please try again.');
      console.error('Error fetching shows:', err);
    } finally {
      setLoading(false);
    }
  };

  const validateForm = (): boolean => {
    const errors = { name: '', startTime: '', totalSeats: '' };
    let isValid = true;

    if (!formData.name.trim()) {
      errors.name = 'Name is required';
      isValid = false;
    }

    if (!formData.startTime) {
      errors.startTime = 'Start time is required';
      isValid = false;
    } else {
      const selectedTime = new Date(formData.startTime);
      if (selectedTime < new Date()) {
        errors.startTime = 'Start time must be in the future';
        isValid = false;
      }
    }

    if (formData.type !== 'appointment') {
      if (!formData.totalSeats) {
        errors.totalSeats = 'Total seats is required for shows and trips';
        isValid = false;
      } else if (parseInt(formData.totalSeats) < 1 || parseInt(formData.totalSeats) > 500) {
        errors.totalSeats = 'Total seats must be between 1 and 500';
        isValid = false;
      }
    }

    setFormErrors(errors);
    return isValid;
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setError('');
    setSuccess('');

    if (!validateForm()) {
      return;
    }

    try {
      const { error } = await supabase.from('shows').insert([
        {
          name: formData.name.trim(),
          type: formData.type,
          start_time: new Date(formData.startTime).toISOString(),
          total_seats: formData.type === 'appointment' ? null : parseInt(formData.totalSeats),
        },
      ]);

      if (error) throw error;

      setSuccess('Show created successfully!');
      setFormData({
        name: '',
        type: 'show',
        startTime: '',
        totalSeats: '',
      });
      setFormErrors({ name: '', startTime: '', totalSeats: '' });
      fetchShows();

      setTimeout(() => setSuccess(''), 3000);
    } catch (err) {
      setError('Failed to create show. Please try again.');
      console.error('Error creating show:', err);
    }
  };

  const formatDateTime = (dateString: string) => {
    return new Date(dateString).toLocaleString('en-US', {
      dateStyle: 'medium',
      timeStyle: 'short',
    });
  };

  return (
    <div className="space-y-8">
      <div className="bg-white rounded-lg shadow-md p-6">
        <div className="flex items-center space-x-3 mb-6">
          <Plus className="w-6 h-6 text-blue-600" />
          <h2 className="text-2xl font-bold text-gray-900">Create New Show</h2>
        </div>

        {error && (
          <div className="mb-4 p-4 bg-red-50 border border-red-200 rounded-md text-red-700">
            {error}
          </div>
        )}

        {success && (
          <div className="mb-4 p-4 bg-green-50 border border-green-200 rounded-md text-green-700">
            {success}
          </div>
        )}

        <form onSubmit={handleSubmit} className="space-y-4">
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Name *
            </label>
            <input
              type="text"
              value={formData.name}
              onChange={(e) => setFormData({ ...formData, name: e.target.value })}
              className={`w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent ${
                formErrors.name ? 'border-red-500' : 'border-gray-300'
              }`}
              placeholder="Enter show/bus/doctor name"
            />
            {formErrors.name && (
              <p className="mt-1 text-sm text-red-600">{formErrors.name}</p>
            )}
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Type *
            </label>
            <select
              value={formData.type}
              onChange={(e) =>
                setFormData({ ...formData, type: e.target.value as 'show' | 'trip' | 'appointment' })
              }
              className="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="show">Show</option>
              <option value="trip">Trip</option>
              <option value="appointment">Appointment</option>
            </select>
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Start Time *
            </label>
            <input
              type="datetime-local"
              value={formData.startTime}
              onChange={(e) => setFormData({ ...formData, startTime: e.target.value })}
              className={`w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent ${
                formErrors.startTime ? 'border-red-500' : 'border-gray-300'
              }`}
            />
            {formErrors.startTime && (
              <p className="mt-1 text-sm text-red-600">{formErrors.startTime}</p>
            )}
          </div>

          {formData.type !== 'appointment' && (
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Total Seats *
              </label>
              <input
                type="number"
                value={formData.totalSeats}
                onChange={(e) => setFormData({ ...formData, totalSeats: e.target.value })}
                className={`w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent ${
                  formErrors.totalSeats ? 'border-red-500' : 'border-gray-300'
                }`}
                placeholder="Enter number of seats (1-500)"
                min="1"
                max="500"
              />
              {formErrors.totalSeats && (
                <p className="mt-1 text-sm text-red-600">{formErrors.totalSeats}</p>
              )}
            </div>
          )}

          <button
            type="submit"
            className="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors font-medium"
          >
            Create Show
          </button>
        </form>
      </div>

      <div className="bg-white rounded-lg shadow-md p-6">
        <h2 className="text-2xl font-bold text-gray-900 mb-6">All Shows</h2>

        {loading ? (
          <div className="text-center py-8">
            <div className="inline-block animate-spin rounded-full h-8 w-8 border-4 border-blue-600 border-t-transparent"></div>
            <p className="mt-2 text-gray-600">Loading shows...</p>
          </div>
        ) : shows.length === 0 ? (
          <div className="text-center py-8 text-gray-500">
            <Calendar className="w-12 h-12 mx-auto mb-3 text-gray-400" />
            <p>No shows created yet. Create your first show above!</p>
          </div>
        ) : (
          <div className="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
            {shows.map((show) => (
              <div
                key={show.id}
                className="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow"
              >
                <div className="flex items-start justify-between mb-2">
                  <h3 className="font-semibold text-lg text-gray-900">{show.name}</h3>
                  <span className="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-700 rounded-full">
                    {show.type}
                  </span>
                </div>

                <div className="space-y-2 text-sm text-gray-600">
                  <div className="flex items-center space-x-2">
                    <Clock className="w-4 h-4" />
                    <span>{formatDateTime(show.start_time)}</span>
                  </div>

                  {show.total_seats !== null && (
                    <div className="flex items-center space-x-2">
                      <Users className="w-4 h-4" />
                      <span>{show.total_seats} seats</span>
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
};
